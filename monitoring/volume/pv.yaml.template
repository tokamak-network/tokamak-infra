---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: promehteus-pv
  labels:
    app: prometheus
spec:
  capacity:
    storage: 500Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  storageClassName: efs-sc
  csi:
    driver: efs.csi.aws.com
    volumeHandle: ${EFS_VOLUME_ID}